<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/soft_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyle.Headline" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="TextStyle.Heading">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextStyle.SubHeading">
        <item name="android:textColor">@color/grey_3</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle.TitleCard">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyle.ContentCard">
        <item name="android:maxLines">6</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.ContentCard.Inverse">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextStyle.Body">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle.Button">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="TextStyle.Body.Title">
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/soft_black</item>
    </style>

    <style name="TextStyle.Body.Content">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">20</item>
        <item name="android:textColor">@color/soft_black</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextStyle.Body.Content.Inverse">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextStyle.Body.SubContent">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/soft_grey_2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextStyle.Body.SubContent.Inverse">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextStyle.Body.Badge">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/soft_black</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextStyle.Form">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/soft_black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle.Form.Label" />

    <style name="TextStyle.Form.Description">
        <item name="android:textColor">@color/grey_3</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextFieldStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_adding_item_text_field</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">start</item>
        <item name="hintTextColor">@color/grey_2</item>
        <item name="android:textColor">@color/soft_black</item>
    </style>

    <style name="TextFieldTitleStyle" parent="TextFieldStyle">
        <item name="android:maxLength">50</item>
        <item name="maxLines">3</item>
        <item name="android:hint">@string/title_hint</item>
        <item name="android:ems">3</item>
    </style>

    <style name="TextFieldContentStyle" parent="TextFieldStyle">
        <item name="maxLines">20</item>
        <item name="android:ems">20</item>
        <item name="android:hint">@string/content_hint</item>
    </style>

    <style name="TextFieldDescriptionStyle" parent="TextFieldStyle">
        <item name="maxLines">10</item>
        <item name="android:maxLength">150</item>
        <item name="android:ems">5</item>
        <item name="android:hint">@string/description_hint</item>
    </style>

    <style name="ExploreSearchView" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:background">@drawable/bg_search_notes</item>
        <item name="android:hint">Search Notes</item>
        <item name="android:inputType">text</item>
        <item name="android:drawableEnd">@drawable/icon_search</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <style name="RoundedImageStyle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_3</item>
    </style>

    <style name="ButtonWithIconOnlyStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
    </style>
</resources>